    "outDir": "./ts-build",
    "allowJs": true,
    "target": "ES6",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "jsx": "react",
    "esModuleInterop": true,
    "types": ["vitest/globals"]
  },
  "include": [
    "./src/**/*",
    "./types/**/*",
    "./test/**/*",
  ]
}